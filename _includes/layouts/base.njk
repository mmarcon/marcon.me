<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ renderData.title or title or metadata.title }}</title>
    <meta name="Description" content="{{ renderData.description or description or metadata.description }}">
    <link href="https://fonts.googleapis.com/css?family=Barlow:400,600|Playfair+Display" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO"
        crossorigin="anonymous">
    <link rel="stylesheet" href="{{ '/css/prism.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/index.css' | url }}">
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark sticky-top">
        <div class="container topnav">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav"
                aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            {% if templateClass !== 'tmpl-home' and templateClass !== 'tmpl-cv' %} <a class="navbar-brand" href="/">Massimiliano Marcon</a> {% endif %}
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">

                    {%- for nav in collections.nav -%}
                    <li class="nav-item{% if nav.url == page.url %} active{% endif %}"><a class="nav-link" href="{{ nav.url | url }}">{{
                            nav.data.navtitle }}</a></li>
                    {%- endfor -%}
                    <li class="nav-item">
                        <a class="nav-link" href="mailto:hello@marcon.me">Contact</a>
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>

    <main {% if templateClass %} class="{{ templateClass }}" {% endif %}>
        {{ content | safe }}
    </main>

    <footer>
        <div class="container">
            <div class="row">
                <ul class="col-md-9">
                    <li><a href="https://github.com/mmarcon">Github</a></li>
                    <li><a href="https://twitter.com/mmarcon">Twitter</a></li>
                    <li><a href="https://linkedin.com/in/massimilianomarcon">LinkedIn</a></li>
                </ul>
                <p class="col-md-3 copyright text-right"><small>&copy; 2019 Massimiliano Marcon</small></p>
            </div>
        </div>
    </footer>

    <!-- Current page: {{ page.url | url }} -->
    <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
        crossorigin="anonymous"></script>
    <script src="{{ '/js/ihavecookies.min.js' | url }}"></script>
    <script>
        $(function() {
            var navMain = $('.navbar-collapse');
            navMain.on('click', 'a', null, function () {
                navMain.collapse('hide');
            });
            $('body').ihavecookies({
                fixedCookieTypeLabel: 'Analytics',
                cookieTypes: [],
                message: 'I use cookies to anonymously track visits to my website.'
            });
        });
    </script>
    <script>
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
  })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');
  ga('create', 'UA-29386760-2', 'auto');
  ga('send', 'pageview');
    </script>
</body>

</html>