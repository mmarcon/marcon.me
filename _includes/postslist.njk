<ul class="postlist list-unstyled">
{% for post in postslist | reverse %}
  <li class="postlist-item{% if post.url == url %} postlist-item-active{% endif %}">
    <h5><a href="{{ post.url | url }}" class="postlist-link">{% if post.data.title %}{{ post.data.title }}{% else %}<code>{{ post.url }}</code>{% endif %}</a></h5>
    {# <time class="postlist-date" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time> #}
    <ul class="post-tags list-inline">
    {% for tag in post.data.tags %}
      {%- if tag != "posts" -%}
      {% set tagUrl %}/tags/{{ tag }}/{% endset %}
        <li class="list-inline-item post-tag-item"><a href="{{ tagUrl | url }}" class="post-tag">{{ tag }}</a></li>
      {%- endif -%}
    {% endfor %}
    </ul>
    <p>
    {{post.data.description}}
    </p>
  </li>
{% endfor %}
</ul>
